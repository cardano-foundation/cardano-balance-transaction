    , cardano-ledger-alonzo        >=1.14.0.0  && <1.15
    , cardano-ledger-api           >=1.12.1.0  && <1.13
    , cardano-ledger-babbage       >=1.12.0.0  && <1.13
    , cardano-ledger-binary

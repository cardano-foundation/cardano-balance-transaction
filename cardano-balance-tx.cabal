    , cardano-ledger-core          >=1.18.0.0  && <1.19
    , cardano-ledger-mary          >=1.9.0.0   && <1.10
    , cardano-ledger-shelley       >=1.17.0.0  && <1.18
    , cardano-slotting             >=0.2.0.0   && <0.3
